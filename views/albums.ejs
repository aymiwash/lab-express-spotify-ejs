<div id="albums_page" class="page">
  <div class="albums_container">
    <h1 class="albums_container_h1"><a href="/artist-search?artist=<%- albums.items[0].artists[0].name%>" >‚Üê</a> Albums</h1>
    <ul class="albums_result">
      <% albums.items.forEach(album => { %>
      <li>
        <% if (album.images[0]?.url) { %>
        <a href="/tracks/<%- album.id %>">
          <img
            src="<%- album.images[0]?.url %>"
            alt="album cover"
            class="spotifyImg"
          />
        </a>
        <% }else{%>
        <p class="not_available">No cover available</p>
        <%} %>
        <a href="/tracks/<%- album.id %>" class="album_name"><h3 ><%- album.name %></h3></a>
        <a href="/tracks/<%- album.id %>" class="button_area"><button class="buttons">View Tracks</button></a>
      </li>
      <% }) %>
    </ul>
  </div>
</div>
